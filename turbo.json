{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "envMode": "strict",
  "globalEnv": [
    "NODE_ENV",
    "DATA_DIR",
    "OPENAI_API_KEY",
    "DEFAULT_PROVIDER",
    "DEFAULT_MODEL",
    "DEEPSEEK_API_URL",
    "DEEPSEEK_API_KEY",
    "AUTH_SECRET",
    "GITHUB_ID",
    "GITHUB_SECRET",
    "API_PORT",
    "DEBUG_LOGS",
    "LOG_LEVEL",
    "ENABLE_DEVTOOLS"
  ],
  "tasks": {
    "clean": {
      "dependsOn": [
        "^clean"
      ],
      "inputs": [
        "dist/**"
      ],
      "cache": false
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ]
    },
    "build:watch": {
      "dependsOn": [
        "^build:watch"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "lint:fix": {
      "dependsOn": [
        "^lint:fix"
      ]
    },
    "test": {
      "dependsOn": [
        "^test"
      ]
    },
    "test:unit": {
      "dependsOn": [
        "^test:unit"
      ]
    },
    "test:integration": {
      "dependsOn": [
        "^test:integration"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
